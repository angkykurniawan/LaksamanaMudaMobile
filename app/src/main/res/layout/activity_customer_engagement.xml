<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3E0">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- JUDUL -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prediksi Customer Engagement"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#E65100"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukkan data pelanggan untuk melihat level engagement"
            android:textSize="14sp"
            android:textColor="#6D4C41"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <!-- KARTU FORM -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="20dp"
            android:elevation="6dp">

            <!-- INPUT KATEGORI -->
            <EditText
                android:id="@+id/etKategori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="52dp"
                android:padding="14dp"
                android:hint="Kategori Tiket (VIP, Reguler, Gold)"
                android:inputType="textCapWords"
                android:backgroundTint="#FB8C00"
                android:textColor="#000000"
                android:textColorHint="#FFB74D"/>

            <!-- INPUT JUMLAH -->
            <EditText
                android:id="@+id/etJumlah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="52dp"
                android:padding="14dp"
                android:hint="Jumlah Tiket"
                android:inputType="number"
                android:layout_marginTop="14dp"
                android:backgroundTint="#FB8C00"
                android:textColor="#000000"
                android:textColorHint="#FFB74D"/>

            <!-- INPUT SUMBER INFO -->
            <EditText
                android:id="@+id/etSumberInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="52dp"
                android:padding="14dp"
                android:hint="Sumber Info (IG_LAKSAMANAMUDA, dll)"
                android:inputType="text"
                android:layout_marginTop="14dp"
                android:backgroundTint="#FB8C00"
                android:textColor="#000000"
                android:textColorHint="#FFB74D"/>

            <!-- TOMBOL -->
            <Button
                android:id="@+id/btnPrediksi"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Prediksi Sekarang"
                android:layout_marginTop="22dp"
                android:backgroundTint="#F57C00"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>

        </LinearLayout>

        <!-- HASIL -->
        <TextView
            android:id="@+id/tvHasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Hasil Prediksi Akan Muncul Di Sini"
            android:textColor="#E65100"
            android:padding="16dp"/>

    </LinearLayout>

</ScrollView>
